@page "/events"
@using EventMasterProjectShared
@inject HttpClient http
@inject IJSRuntime jsRuntime
@inject NavigationManager manager;

<h3>EventList</h3>
<div class="form-group">
    <a class="btn btn-success" href="events/create">Create New Event</a>
</div>
@if (event111 == null)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading....</span>
        </div>
    </div>
}
else if (event111.Count == 0)
{
    <text>There no record to show</text>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Name</th>
                <th>StartTime </th>
                <th>EndTime</th>
                <th>Description</th>
                <th>Organizer </th>
                <th>Active</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var eventlist in event111)
            {
                <tr>
                    <td>@eventlist.Id</td>
                    <td><img height="50" width="50" src="@eventlist.ImageUrl"></td>
                    <td>@eventlist.Name</td>
                    <td>@eventlist.StartTime</td>
                    <td>@eventlist.EndTime</td>
                    <td>@eventlist.Description</td>
                    <td>@eventlist.Organizer</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="events/edit/@eventlist.Id">Edit</a> |
                        <button @onclick="async ()=>await Delete(eventlist)" class="btn btn-danger btn-sm">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@code {
    List<Event> event111 { get; set; }
    protected override async Task OnInitializedAsync()
    {
        event111 = await http.GetFromJsonAsync<List<Event>>("api/events ");
    }
    private async Task Delete(Event @event)
    {
        bool confirmed = await jsRuntime.InvokeAsync<bool>("confirm", "Are you sure to delete the record");
        if (confirmed)
        {
            var response = await http.DeleteAsync($"api/events/{@event.Id}");
            if (response.IsSuccessStatusCode)
            {
                event111.Remove(@event);
            }

        }
    }
}
